<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} %5level %thread %class{0} %msg %n</pattern>
    </encoder>
  </appender>
  <logger name="org.springframework" level="INFO" />
  <root level="debug">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>